#! /usr/bin/env python

import os
from distutils.core import setup
from glob import glob
from distutils.extension import Extension

incdir_src = os.path.abspath("@top_srcdir@/include")
incdir_build = os.path.abspath("@top_builddir@/include")
libdir = os.path.abspath("@top_builddir@/src/.libs")

ext = Extension("lhapdf",
                ["lhapdf.cpp"],
                include_dirs = [incdir_src, incdir_build],
                extra_compile_args= "-I@prefix@/include @YAMLCPP_CPPFLAGS@ @BOOST_CPPFLAGS@".split(),
                library_dirs = [libdir],
                extra_link_args = "-L@prefix@/lib @YAMLCPP_LDFLAGS@".split() + "@YAMLCPP_LIBS@".split(),
                language = "C++",
                libraries = ["stdc++", "LHAPDF"])

setup(name = "LHAPDF",
      version = "@PACKAGE_VERSION@",
      ext_modules = [ext])
